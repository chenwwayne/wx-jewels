.search-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
  background-color: #f2f2f2;
  border-radius: 5rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: none;
  background-color: transparent;
  font-size: 28rpx;
}

.search-button {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #007bff;
  color: #fff;
  border:0;
  border-radius: 5rpx;
}