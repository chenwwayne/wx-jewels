/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.productNav{
  height: 100%;
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei"
}
.left{
  width: 25%;
  font-size: 30rpx;
  background-color: #f4f4f4;
}
.left view{
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}
.selected{
  background-color: #fff;
  border-left: 2px solid #E54847;
  font-weight: bold;
  color: #E54847;
}
.normal{
  background-color: #f4f4f4;
  border-bottom: 1px solid #f2f2f2;
}
.right{
  height: 100%;
  width:75%;
  margin: 0;
}
swiper{
  /* margin-top: 100rpx; */
  height: 100vh;
}

.banner{
  height: 50wh;
}

.product-container {
  display: flex;
  align-items: center;
  margin-top: 60rpx;
  /* margin-bottom: 130rpx; */
}

.product-image {
  width: 30vw;
  height: 200rpx;
  flex-shrink: 0; /* 防止图片缩小 */
  margin-left: 30rpx;
}

.product-text {
  margin-left: 10px; /* 调整文字与图片之间的间距 */
}

